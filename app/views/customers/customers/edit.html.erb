<div class="container">
  <div class="row">
    <div class="col">
      <h4><mark style="background-color: #F8F8F8F8;">登録情報編集</mark></h4>
      <%= form_for(@customer) do |f| %>
        <table class="table">
		      <thead>
    	    </thead>
          <tbody>
            <tr>
              <td>ニックネーム</td>
              <td>
                <div class="field"><%= f.text_field :name, autofocus: true, autocomplete: "name" %></div>
              </td>
              <td>
              </td>
            </tr>
            <tr>
              <td>説明文</td>
              <td>
                <div class="field"><%= f.text_field :introduction, autofocus: true, autocomplete: "introduction" %></div>
              </td>
              <td>
              </td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td>
                <div class="field"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
              </td>
              <td>
              </td>
            </tr>
            <tr>
              <td>プロフィール画像</td>
              <td>
                <div class="field"></div>
              </td>
              <td><%= f.attachment_field :image %>
              </td>
            </tr>
            <tr>
          </tbody>
        </table>
        <div style="text-align: center;">
		      <%= f.submit "編集内容を保存する", class: 'btn btn-primary' %>
        </div>
	    <% end %>
    </div>
  </div>
</div>
