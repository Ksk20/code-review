<div class="container">
  <div class="row">
    <div class="col-lg-5">

      <h4><mark>偉人登録</mark>
        <span class="attention">（※マークは入力必須項目です）</span>
      </h4>

      <%= form_for(@person) do |f| %>

      <%# ここからエラーメッセージ %>
      <%= render 'layouts/error_messages', model: f.object %>
      <%# ここまでエラーメッセージ %>

      <p class="form-title">※名前</p>
        <span class="form-a"><%= f.text_field :name %>
        </span>
      <p class="form-title">※フリガナ（全角カタカナ）</p>
        <span class="form-a"><%= f.text_field :name_kana %></span>
      <p class ="form-title">別名</p>
        <span class="form-a"><%= f.text_field :alias %></span>
      <p class="form-title">出身国</p>
        <span class="form-a"><%= f.text_field :country %></span>
      <p class="form-title">生まれた年</p>
        <span class="form-a"><%= f.text_field :birth %>
      <p class="form-title">亡くなった年</p></span>
        <span class="form-a"><%= f.text_field :death %></span>
      <p class="form-title">紹介文</p>
        <span class="form-a"><%= f.text_area :introduction %></span><br>
          <span class="form-a"><%= f.submit '保存', class: "btn-z" %></span>
  　  <% end %>
    </div>
    <div class="col-lg-7">
      <div class="youtube-container">
        <% iframe = content_tag(
          :iframe,
          '',
          width: 660,
          height: 450,
          src: "https://youtu.be/BGPgj5YvC7s",
          frameborder: 0,
          allowfullscreen: true
        ) %>
        <%= content_tag(:div, iframe, class: 'youtube-container') %>
      </div>
    </div>
  </div>
</div>