<div class="container">
  <div class="row">
    <div class="col">
      <h4><mark style="background-color: #F8F8F8F8;">作品編集</mark>
      </h4>
      <%= form_with(model: @creation , url: person_creation_path(@person), creation_id: params[:id],) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
   　   <table class="table">
          <tbody>
            <tr>
              <td>作品</td>
              <td>
                <div class="field"><%= f.attachment_field :image %></div>
              </td>
              <td>
              </td>
            </tr>
            <tr>
              <td>説明文</td>
              <td><%= f.text_area :caption %></td>
              <td></td>
            </tr>
          </tbody>
        </table>
        <div style="text-align: center;">
		      <%= f.submit "編集内容を保存する", class: 'btn' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
