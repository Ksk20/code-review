<div class="container">
  <div class="row">
  	<div class="col-lg">
      <h4>作品登録</h4>
      <%= form_with(model: @creation, url: person_creations_path(@person)) do |f| %>
        <%# エラーメッセージ　%>
        <%= render 'layouts/error_messages', model: f.object %>
        <%# ここまでエラ-メッセージ　%>
			  <p class="form-title"><strong>絵、漫画、写真など</strong><span class="attention">（ご自身に著作権があるもののみ登録可）</span></p>
  			  <%= f.attachment_field :image %>
  		  <p class="form-title"><strong>説明文</strong></p>
  			  <%= f.text_area :caption %>
  			  <%= f.submit '投稿' %>
		  <% end %>
	  </div>
  </div>
 </div>